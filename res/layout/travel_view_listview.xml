<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:id="@+id/travel_info_item_image"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_margin="5px" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:id="@+id/travel_info_item_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/softwarefontcolor" android:textSize="16px" />
		<TextView android:id="@+id/travel_info_item_abstract"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/softwarefontcolor" android:textSize="13px"/>
	</LinearLayout>
</LinearLayout>